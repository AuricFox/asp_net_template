@model Flashcards.Models.Card

@{
    ViewData["Title"] = "DisplayFlashcards";
    Console.WriteLine("Display Flashcards");
}

<form method="post" asp-action="DisplayFlashcards">
    <select asp-for="Category" asp-items="ViewBag.CategoryList">
        <option value="">Select a Category</option>
    </select>
    <button type="submit">Submit</button>
</form>

<div class="flashcard-container">
    @if (ViewBag.FilteredCards == null || !ViewBag.FilteredCards.Any())
    {
        <p>No cards found for the selected category or no category selected.</p>
    }
    else
    {
        @foreach (var card in ViewBag.FilteredCards)
        {
            <div class="flashcard">
                <div class="front">
                    <p>@card.Question</p>
                </div>
                <div class="back">
                    <p>@card.Answer</p>
                </div>
            </div>
        }
    }
</div>